            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        
            
        {% endblock %}
     
    </head>
    <body>
        <div id="titulo">
            
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="dropdown">
    <input type="checkbox" id="abrir-cerrar" name="abrir-cerrar" value="">
          <label for="abrir-cerrar">&#9776; <span class="abrir"></span><span class="cerrar"></span></label>
          <div id="sidebar" class="sidebar">
              <ul class="menu">
                  <li><a href="{{ path('inicio') }}">Inicio</a></li>
                  <li class="nav-item dropdown">
                    <a style="color:white"  id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Destacados
                    </a>
                    <div style="background-color: brown; color: white" class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" routerLink="">Mundo</a>
                      <a class="dropdown-item" routerLink = ''>España</a>            
                    </div>
                  </li> 
                  <li class="nav-item dropdown">
                    <a style="color:white"   id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Otros
                    </a>
                    <div style="background-color: brown;  color: white" class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" routerLink="">Todos los estilos</a>
                      <a class="dropdown-item" routerLink = ''>Electronica</a>
                      <a class="dropdown-item" routerLink = ''>Reggaetón/Hip Hop</a>  
                      <a class="dropdown-item" routerLink = ''>Pop/Indie</a>  
                      <a class="dropdown-item" routerLink = ''>Rock/Metal/Punk</a>              
                      <a class="dropdown-item" routerLink = ''>Multigenero/World Music</a>  
                    </div>
                  </li> 
                  <li><a href="#">Favoritos</a></li>
                  <li><a  href = "{{ path('foro') }}">Foro</a></li>
              </ul>
          </div>
   
    
</div>
 
  
    <div  class="collapse navbar-collapse" id="navbarSupportedContent"> 
      <div  class="mr-auto">
      </div>
      <div  class="mr-auto">       
        <h1 style="color: wheat;"> <img width="50px" src='{{ asset('imagenes/logoF2.png') }}'> &nbsp;&nbsp;     Festivales</h1>
      </div>
      <form class="form-inline my-2 my-lg-0" >
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>        
      </form>   &nbsp;     
      
      <ul  class="navbar-nav   mt-2 mt-lg-0">
          {%  if app.user %}
              <li><a href="{{  path('perfil',{id:app.user.id}) }}"> <i class="fas fa-user">{{ app.user.nombre}}  </i>  </a></li> &nbsp;&nbsp;
              <a href="{{ path('app_logout') }}">Cerrar session</a>
           
            {%  else %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Iniciar Session
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="{{ path('app_login') }}">Login</a>
                      <a class="dropdown-item" href="{{ path('registrar') }}" >Registrar</a>            
                    </div>
                 </li> 
            {% endif %}
        
         
       
      </ul>
      
    </div>
  </nav>
           
            
        </div>  
       
        {% block body %}{% endblock %}
    </body>
</html>
